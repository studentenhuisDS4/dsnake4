{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npmServe",
			"type": "shell",
			"command": "npm",
			"isBackground": true,
			"problemMatcher": {
                "owner": "typescript",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^([^\\s].*)\\((\\d+|\\,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
                    "file": 1,
                    "location": 2,
                    "severity": 3,
                    "code": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
					"beginsPattern": "Starting development server\\.\\.\\.",
					"endsPattern": "Compiled successfully in"
                }
            },
			"args": [
				"run",
				"serve"
			],
			"options": {
				"cwd": "${workspaceFolder}/dsnake4-phaser/"
			}
		},
		{
			"label": "npm Json Schemas",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"schemas"
			],
			"options": {
				"cwd": "${workspaceFolder}/dsnake4-phaser/"
			}
		}
	]
}