{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "Direction": {
            "enum": [
                "Down",
                "Left",
                "Right",
                "Up"
            ],
            "type": "string"
        },
        "IStairs": {
            "additionalProperties": false,
            "properties": {
                "enterOffsetX": {
                    "type": "number"
                },
                "enterOffsetY": {
                    "type": "number"
                },
                "entryDirection": {
                    "$ref": "#/definitions/Direction"
                },
                "height": {
                    "type": "number"
                },
                "key": {
                    "type": "string"
                },
                "mirrorKey": {
                    "type": "string"
                },
                "opened": {
                    "type": "boolean"
                },
                "opens": {
                    "$ref": "#/definitions/MapLevel"
                },
                "width": {
                    "type": "number"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                }
            },
            "type": "object"
        },
        "IWall": {
            "additionalProperties": false,
            "description": "Interface `IWall` defines",
            "properties": {
                "anchor": {
                    "additionalItems": {
                        "anyOf": [
                            {
                                "type": "number"
                            },
                            {
                                "type": "number"
                            }
                        ]
                    },
                    "items": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "number"
                        }
                    ],
                    "minItems": 2,
                    "type": "array"
                },
                "direction": {
                    "$ref": "#/definitions/Direction"
                },
                "length": {
                    "type": "number"
                },
                "removable": {
                    "type": "boolean"
                },
                "visible": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "MapLevel": {
            "enum": [
                "FirstFloor",
                "SecondFloor",
                "Shop",
                "ThirdFloor",
                "Tropen"
            ],
            "type": "string"
        }
    },
    "properties": {
        "level": {
            "$ref": "#/definitions/MapLevel"
        },
        "name": {
            "type": "string"
        },
        "stairs": {
            "items": {
                "$ref": "#/definitions/IStairs"
            },
            "type": "array"
        },
        "walls": {
            "items": {
                "$ref": "#/definitions/IWall"
            },
            "type": "array"
        }
    },
    "type": "object"
}

